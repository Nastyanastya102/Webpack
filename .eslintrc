{
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules" : {
        "max-len": ["warn", { "code": 80 }],
        "no-unused-vars" : "warn",
        "no-multi-spaces": "warn",
        "semi": [2, "always"],
        "strict": 0,
        "quotes": [2, "single"],
        "jsx-quotes": [1, "prefer-single"],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "settings": {
        "react": {
          "version": "detect"
        }
      },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ]
}